using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class BuildingRotation : MonoBehaviour {
  
  public var _rotY = 90f;
  public Vector3 switch = new Vector3 (0f, 0f, 0f);

  void Update() {
    rotationTest();
  }
  
  public void rotationTest() {
    if (Camera.main.transform.eulerAngles.y != 0) {
      _rotY += Camera.main.transform.eulerAngles.y;
      transform.eulerAngles = switch + _rotY;
    }
    else {
      Debug.Log(string.Format("no rotation needed!")); 
    }
  }
}
